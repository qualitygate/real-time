<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <AssemblyName>QualityGate.RealTime</AssemblyName>
        <RootNamespace>QualityGate.RealTime</RootNamespace>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>QualityGate.RealTime</PackageId>
        <Title>Real time data with SignalR</Title>
        <Authors>Ariel Felipe Camacho DÃ­az</Authors>
        <Description>Contains a SignalR Hub and some abstractions to expose  websocket connections to clients to listen and keep synced database queries on a RavenDB.</Description>
        <RepositoryUrl>https://github.com/qualitygate/real-time</RepositoryUrl>
        <Company>QualityGate</Company>
        <Product>QualityGate.RealTime</Product>
        <AssemblyVersion>1.1.0</AssemblyVersion>
        <PackageTags>signalr database websocket sync</PackageTags>
        <PackageReleaseNotes>- Adds a Hub to connect to from web components.
- Register queries from the web components through the Hub.
- Registered queries get notified on real-time of changes to domain entities matching their criteria.</PackageReleaseNotes>
        <PackageVersion>1.1.0</PackageVersion>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.AspNetCore.SignalR" Version="1.1.0" />
      <PackageReference Include="Microsoft.Extensions.Configuration" Version="6.0.0" />
      <PackageReference Include="RavenDB.Client" Version="5.3.0" />
    </ItemGroup>

</Project>
